<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pb_custom_rel_sale_order" model="ir.ui.view">
        <field name="name">pb_custom_rel_sale_order</field>
        <field name="inherit_id" ref="sale.report_saleorder_document"/>
        <field name="arch" type="xml">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.external_layout">
                    <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                    <!--Parte impressão dados cliente-->
                    <div class="border-bottom border-dark p-2 pb-5">
                        <p>
                            <b class="h5">Cliente:</b><span class="col-6" t-field="doc.partner_id" />
                            <b class="h5">Tel:</b><span class="col-6" t-field="doc.partner_id.mobile" />
                        </p>
                        <p class="display-6">
                            <b class="h5">Endereço:</b>
                            <span t-field="doc.partner_id.street2" style="width: 200px;"/>
                            <span t-field="doc.partner_id.street" />
                            <span t-field="doc.partner_id.street" />
                            <b t-if="doc.partner_id.l10n_br_district != false" class="h5">Bairro:</b>
                            <span t-field="doc.partner_id.l10n_br_district" />
                        </p>
                        <p>
                            <b t-if="doc.partner_id.zip != false" class="h5">CEP:</b><span t-field="doc.partner_id.zip" />
                            <b class="h5">CNPJ/CPF:</b><span class="col-6" t-field="doc.partner_id.l10n_br_cnpj_cpf" />
                        </p>
                        <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/> 
                        <!-- Para que apareça no rodapé do relatório em vez do IVA da empresa se estiver definido -->
                        <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
                    </div> 

                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id and doc.partner_invoice_id != doc.partner_id or doc.partner_shipping_id != doc.partner_invoice_id"></t>

                    <!--Parte impressão dos produtos-->
                    <div class="page pt-3">
                        <div class="oe_structure"/>
                        <h2 class="mt16">
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <span t-if="doc.state not in ['draft','sent']">Ordem # </span>
                                <span t-if="doc.state in ['draft','sent']">Cotação # </span>
                            </t>
                            <t t-if="env.context.get('proforma', False) or is_pro_forma">
                                <span>Fatura Pro-Forma # </span>
                            </t>
                            <span t-field="doc.name"/>
                        </h2>

                        <div class="row mt40 mb40" id="informations">
                            <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                                <p class="m-0" >
                                    <strong>Referência: </strong><span t-field="doc.client_order_ref" />
                                </p>
                            </div>
                            <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                                <p class="m-0" >
                                    <strong>Data do pedido: </strong><span t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                </p>
                            </div>
                            <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                                <p class="m-0" >
                                    <strong>Data da cotação: </strong><span t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                </p>
                            </div>
                            <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                                <p class="m-0" >
                                    <strong>Expiração: </strong><span t-field="doc.validity_date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                                </p>
                            </div>
                            <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                                <p class="m-0" >
                                    <strong>Vendedor: </strong><span t-field="doc.user_id"/>
                                </p>
                            </div>
                        </div>

                        <!-- Tem desconto em pelo menos uma linha? -->
                        <t t-set="display_discount" t-value="any(l.discount for l in doc.order_line)"/>

                        <table class="table table-sm o_main_table mt-3">
                            <!-- Caso queira repetir o cabeçalho, remove "display: table-row-group" -->
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_description" class="text-left">Descrição</th>
                                    <th name="th_quantity" class="text-right">Quantidade</th>
                                    <th name="th_priceunit" class="text-right">Preço Un.</th>
                                    <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                        <span>Desc.%</span>
                                    </th>
                                    <!-- <th name="th_taxes" class="text-right">Taxes</th> Não exibir imposto -->
                                    <th name="th_subtotal" class="text-right">
                                        <span groups="account.group_show_line_subtotals_tax_excluded">Total</span>
                                        <span groups="account.group_show_line_subtotals_tax_included">Preço total</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">

                                <t t-set="current_subtotal" t-value="0"/>

                                <t t-foreach="doc.order_line" t-as="line">

                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td name="td_name"><span t-field="line.name"/></td>
                                            <td name="td_quantity" class="text-right">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom"/>
                                            </td>
                                            <td name="td_priceunit" class="text-right">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                                <span t-field="line.discount"/>
                                            </td>
                                            <!--
                                            <td name="td_taxes" class="text-right">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                            </td>
                                            -->
                                            <td name="td_subtotal" class="text-right o_price_total">
                                                <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td name="td_section_subtotal" colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix" name="so_total_summary">
                            <div id="total" class="row" name="total">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                    <table class="table table-sm">
                                        <!-- Tax totals -->
                                        <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"/>
                                        <t t-call="account.document_tax_totals"/>
                                    </table>
                                    <p t-if="not is_html_empty(doc.payment_term_id.note)">
                                        <span t-field="doc.payment_term_id.note"/>
                                    </p>
                                </div>
                            </div>
                            
                        </div>
                        
                    </div>
                    <!--Parte impressão Medidas-->
                    <!--Parte impressão final-->
                    <div t-if="doc.signature" class="mt32 ml64 mr4" name="signature">
                        <div class="offset-8">
                            <strong>Assinatura: </strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="doc.signed_by"/>
                        </div>
                    </div>

                    <div class="oe_structure"/>

                    <div class="table-responsive-md" 
                        t-if="doc.x_medGola > 0 or doc.x_medQuadril > 0 or doc.x_medCosta > 0 or doc.x_medCalca > 0 or doc.x_medGanco > 0
                        or doc.x_medOmbro > 0 or doc.x_medComprimento > 0 or doc.x_medManga > 0 or doc.x_medCintura > 0
                        or doc.x_medFrente > 0 or doc.x_medSs > 0 or doc.x_medLagManga > 0 or doc.x_medQuadril > 0 or doc.x_medBusto > 0 or doc.x_medAlturaSeio > 0
                        or doc.x_medCoxa > 0 or doc.x_medAlturaCintura > 0 or doc.x_medPo > 0"
                    >
                        <b>Medidas: </b>
                        <div  class="border border-dark">
                            <table class="table table-sm table-bordered text-center">
                                <tbody>
                                    <tr>
                                        <th>Gola</th>
                                        <th>Quadril</th>
                                        <th>Costa</th>
                                        <th>Calça</th>
                                        <th>Ganço</th>
                                        <th>Ombro</th>
                                        <th>Comp.</th>
                                        <th>Mang.</th>
                                        <th>Cint.</th>
                                        <th>Comp. 2</th>
                                        <th>Frente</th>
                                        
                                    </tr>
                                    <tr>
                                        <td><span t-field="doc.x_medGola"/></td>
                                        <td><span t-field="doc.x_medQuadril"/></td>
                                        <td><span t-field="doc.x_medCosta"/></td>
                                        <td><span t-field="doc.x_medCalca"/></td>
                                        <td><span t-field="doc.x_medGanco"/></td>
                                        <td><span t-field="doc.x_medOmbro"/></td>
                                        <td><span t-field="doc.x_medComprimento"/></td>
                                        <td><span t-field="doc.x_medManga"/></td>
                                        <td><span t-field="doc.x_medCintura"/></td>
                                        <td><span t-field="doc.x_medComp2"/></td>
                                        <td><span t-field="doc.x_medFrente"/></td>
                                    </tr>
                                    <tr>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th>SS</th>
                                        <th>Larg. Ma.</th>
                                        <th>Quad.</th>
                                        <th>Bust..</th>
                                        <th>Alt. Seio</th>
                                        <th>Punho</th>
                                        <th>Coxa</th>
                                        <th>Cint. 2</th>
                                        <th>Alt. Cint</th>
                                        <th>Po</th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <td class="border-bottom-0"><span t-field="doc.x_medSs"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medLagManga"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medQuadril"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medBusto"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medAlturaSeio"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medPunho"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medCoxa"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medCint2"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medAlturaCintura"/></td>
                                        <td class="border-bottom-0"><span t-field="doc.x_medPo"/></td>
                                        <td class="border-bottom-0"><span/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div t-if="not is_html_empty(doc.note)" class=" mt-3">
                        <b>Obs: </b>
                        <div  class="border border-dark p-2">
                            <p t-field="doc.note" />
                        </div>
                    </div>
                    
                    <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="doc.fiscal_position_id.sudo().note"/>
                    </p>
                </t>
            </xpath>
        </field>
    </record>

</odoo>