<?xml version="1.0"?>
<openerp>
    <data>
        <template id="account_cash_flow_template_html_report">
             <t t-call="web.html_container">
                    <link rel="stylesheet" href="/account_cash_flow/static/src/css/style.css"/> 
                    <!-- <script type="text/javascript" src="/account_cash_flow/static/src/lib/plotly-latest.min.js"></script> -->
                    <!-- <h2>Gráfico</h2> -->
                    <!-- <div class="row">
                        <div class="col-12">
                            <t t-raw="docs[0].draw_chart()" />
                        </div>
                    </div> -->

                    <div class="page mb-3">
                        <h2 class="text-center">Fluxo de Caixa</h2>
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <td>Saldo de Caixa e Bancos</td>
                                    <td style="text-align: right;"><span t-field="docs[0].start_balance" /></td>
                                </tr>

                                <tr>
                                    <td>Recebimento e pagamentos Pendente</td>
                                    <td style="text-align: right;"><span t-field="docs[0].total_pendente" /></td>
                                </tr>
                                
                                <tr>
                                    <td>Contas a Receber/Pagar do Período</td>
                                    <td style="text-align: right;"><span t-field="docs[0].period_balance" /></td>
                                </tr>

                                <tr>
                                    <td ><b>Resumo Final do Periodo</b></td>
                                    <td style="text-align: right;">
                                        <b t-esc="docs[0].calcule_resumo_final()" t-options='{"widget": "float", "precision": 2}'/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="page mb-3">
                        <h2 class="text-center">Detalhamento</h2>

                        <table class="table table-hover">
                            <tbody>

                                <!-- Declaração das variaveis -->
                                <t t-set="total_secao" t-value="0"/>
                                <t t-set="tipo_conta" t-value=""/>
                                <t t-set="tipo_jornal" t-value=""/>
                                <t t-set="registros" t-value="docs[0].organiza_detalhamento()"/>

                                <t t-foreach="registros" t-as="lista">
                                    <tr t-if="lista['linhas']">
                                        <td colspan="3" class="h4 text-center" t-esc="lista['descricao']"></td>
                                    </tr>

                                    <t t-foreach="lista['linhas']" t-as="o" >
                                        
                                        <t t-if="lista['ver_conta'] and (not tipo_conta == o.account_id )">
                                            <t t-if="(not total_secao == 0) ">
                                                <td></td>
                                                <td class="text-right"><b>Total -> </b></td>
                                                <td >
                                                    <b t-esc="total_secao" t-options='{"widget": "float", "precision": 2}'/>
                                                </td>

                                                <t t-set="total_secao" t-value="0"/>
                                            </t>

                                            <tr class="active">
                                                <td colspan="3" class="h5"><span t-field="o.account_id" /></td>
                                            </tr>
                                            <t t-set="tipo_conta" t-value="o.account_id"/>
                                        </t>

                                        <t t-if="lista['ver_jornal'] and (not tipo_jornal == o.journal_id) ">
                                            <t t-if="(not total_secao == 0) ">
                                                <td></td>
                                                <td class="text-right"><b>Total -> </b></td>
                                                <td >
                                                    <b t-esc="total_secao" t-options='{"widget": "float", "precision": 2}'/>
                                                </td>

                                                <t t-set="total_secao" t-value="0"/>
                                            </t>
                                            
                                            <tr class="active">
                                                <td colspan="3" class="h5"><span t-field="o.journal_id" /></td>
                                            </tr>
                                            <t t-set="tipo_jornal" t-value="o.journal_id"/>
                                        </t>

                                        <tr class="active" >
                                            <td class="hm-td-1"><span t-field="o.date" /> </td>
                                            <td class="text-left"><span t-field="o.name" /></td>
                                            <td class="text-right;"><span t-field="o.amount" /></td>
                                        </tr>

                                        <t t-set="total_secao" t-value="total_secao + o.amount"/>
                                    </t>

                                    <t t-if="(not total_secao == 0) ">
                                        <td></td>
                                        <td class="text-right"><b>Total -> </b></td>
                                        <td >
                                            <b t-esc="total_secao" t-options='{"widget": "float", "precision": 2}'/>
                                        </td>

                                        <t t-set="total_secao" t-value="0"/>
                                    </t>

                                    <tr class="info" t-if="lista['linhas']">
                                        <td></td>
                                        <td class="text-right"><b>Total <t t-esc="lista['descricao']"/> -> </b></td>
                                        <td >
                                            <b t-esc="docs[0].calc_total_linhas(lista['linhas'])" t-options='{"widget": "float", "precision": 2}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
            </t>
        </template>

        <template id="main_template_cash_flow">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="account_cash_flow.account_cash_flow_template_html_report" />
                </t>
            </t>
        </template>

        <report
            id="account_cash_flow_html_report"
            string="Relatorio Fluxo de Caixa"
            model="account.cash.flow"
            report_type="qweb-html"
            name="account_cash_flow.main_template_cash_flow" 
            file="account_cash_flow.reports.account_cash_flow"
        />

        <record id="paperformat_account_cash_flow" model="report.paperformat">
            <field name="name">Cash Flow Format</field>
            <field name="default" eval="True" />
            <field name="orientation">Landscape</field>
            <field name="margin_top">3.0</field>
            <field name="margin_left">3.0</field>
            <field name="margin_right">3.0</field>
            <field name="margin_bottom">6.0</field>
        </record>

        <record id="account_cash_flow_html_report" model="ir.actions.report">
            <field name="paperformat_id" ref="paperformat_account_cash_flow"/>
            <field name="name">Cash Flow</field>
        </record>
    </data>
</openerp>
