<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hm_view_account_payment_tree_inherit" model="ir.ui.view">
            <field name="name">hm.account.payment.tree.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="amount_company_currency_signed" position="after">
                    <field name="amount" widget="monetary" string="Valor Recebido" sum="Total"/>
                </field>
            </field>
        </record>

        <record id="hm_view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">hm.account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='amount_div']" position="after">
                    <field name="amount_company_currency_signed"
                        string="Valor Real"
                        widget="monetary"
                        options="{'currency_field': 'currency_id'}"
                        readonly="1"
                        attrs="{'invisible': [('state', '=', 'draft')]}"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
