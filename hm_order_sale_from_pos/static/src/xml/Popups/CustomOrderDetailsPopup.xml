<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CustomOrderDetailsPopupWidget" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-textinput" style="background-color: #7bcedb">
                <header class="title">
                    <t t-esc="props.title" />
                </header>
                <div class="div">
                    <p>
                        <t t-esc="props.body" />
                    </p>
                    <label>Data da Entrega</label>
                    <input type="date" t-model="state.hm_data_entrega" t-ref="hm_data_entrega" style="margin:5px"/>
                </div>
                <div class="footer">
                    <div class="button confirm" t-on-click="confirm">
                        <t t-esc="props.confirmText" />
                    </div>
                    <div class="button Cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText" />
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>