<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	<t t-name="ViewSaleOrderList" owl="1">
        <div class="orders">
            <div class="header-row">
                <div class="col name">Ordem</div>
                <div class="col date">Data</div>
                <div class="col customer">Cliente</div>
                <div class="col salesman">Vendedor</div>
                <div class="col end total">Total</div>
                <div class="col state">Estado</div>
            </div>
            <div class="order-list">
                <t t-foreach="props.orders" t-as="order" t-key="order.id">
                    <ViewSaleOrderRow order="order"/>
                </t>
            </div>
        </div>
    </t>
</templates>