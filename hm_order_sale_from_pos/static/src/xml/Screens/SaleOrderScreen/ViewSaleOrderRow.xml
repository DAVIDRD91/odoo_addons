<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
	
    <t t-name="ViewSaleOrderRow" owl="1">
            <div class="order-row" 
            t-att-class="{ highlight: highlighted }"
            t-on-click="trigger('click-sale-order', props.order)">
                <div class="col name">
                    <div t-if="env.isMobile">Ordem</div>
                    <div><t t-esc="name"/></div>
                </div>
                <div class="col date">
                    <div t-if="env.isMobile">Data</div>
                    <div><t t-esc="date"/></div>
                </div>
                <div class="col customer">
                    <div t-if="env.isMobile">Cliente</div>
                    <div><t t-esc="customer"/></div>
                </div>
                <div class="col salesman">
                    <div t-if="env.isMobile">Vendedor</div>
                    <div><t t-esc="salesman"/></div>
                </div>
                <div class="col end total">
                    <div t-if="env.isMobile">Total</div>
                    <div><t t-esc="total"/></div>
                </div>
                <div class="col state">
                    <div t-if="env.isMobile">Estado</div>
                    <div><t t-esc="state"/></div>
                </div>
            </div>
    </t>
</templates>